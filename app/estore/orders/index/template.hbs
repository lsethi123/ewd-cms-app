<table>
  <thead>
    <tr>
      <th>
        <h4>Orders</h4>
      </th>
    </tr>
    <tr>
      <th>Order No.</th>
      <th>Total</th>
      <th>State</th>
      <th>User</th>
      <th>Items</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#each model as |order|}}
        <tr class="item">
          <td>{{#link-to 'estore.orders.show' order}}{{order.id}}{{/link-to}}</td>
          <td>{{order.total}}</td>
          <td>{{order.state}}</td>
          <td>{{order.user}}</td>
          <td>Items ordered</td>
          <td><button {{action 'delete' order}}>Delete</button></td>
        </tr>
    {{/each}}
  </tbody>
</table>
