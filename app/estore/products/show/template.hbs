{{#if isEditing}}
{{#md-modal close='closeModal' class="test-modal"}}
{{#if sendingData}}
<div class="modal-content">
<div class="col s10">
  {{md-loader}}
</div>
</div>
{{else}}
<form id="product-form" multipart="true" class="create-form" {{action 'save' on="submit"}}>
    <div class="modal-content">
      {{md-input type="text" value=model.title label="First name"}}
      {{md-input type="text" value=model.description label="Last name"}}
      {{md-input type="text" value=model.price label="Email"}}
      <input type='file' id='file-field'/> Upload an image
      {{md-switch checked=model.inStock onLabel="In Stock" offLabel="Out of Stock"}}<br>
    </div>
    <div class="modal-footer">
        <button class="modal-action modal-close waves-effect waves-orange btn-flat agree-button" type="submit" {{action 'save'}}>
            Save!
        </button>
        <a class="modal-action modal-close waves-effect waves-red btn-flat cancel-button" {{action 'cancel'}}>
            Cancel
        </a>
    </div>
  </form>
  {{/if}}
{{/md-modal}}
{{else}}
  {{#md-card title=model.title
      titleClass="orange-text"
      image=model.imageUrl
      id="image-card"}}
      {{#md-card-content}}
      <p>{{model.description}}</p>
      <h4><label>Price:</label>${{model.price}}</h4>
      <h4><label>Available:</label>{{model.inStock}}</h4>
      {{/md-card-content}}
      {{#md-card-action}}
        <button {{action 'edit'}}>Edit</button>
      {{/md-card-action}}
  {{/md-card}}
{{/if}}
