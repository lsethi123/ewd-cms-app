<div class="layout-hf-holy-grail">
  <div class="body">
    <main>
      {{#each model as |product|}}
      <div class="blog-post-banner-header one-edge-shadow">
        <div class="container">
          {{#link-to 'estore.products.show' product}}<h3 class="center white-text">{{product.title}}</h3>{{/link-to}}
          <h5 class="center white-text">{{product.price}}</h5>
        </div>
      </div>
      <div class="blog-post-body">
        <p class="blog-post-body-text">
          {{product.description}}
        </p><br/>
        <div class="blog-post-banner-footer">
          {{md-btn text='Edit' class='cyan darken-3' action='edit' actionArg=product}}
          {{md-btn text='Delete' class='cyan darken-3' action='delete' actionArg=product}}
