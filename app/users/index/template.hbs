<div class="row">
  <div class="col s12">
    {{#each model as |user|}}
    <div class="col m6 l4 card small hoverable">
      <div class="card-image">
        <img src="http://placehold.it/100x200"/>
        <span class="card-title">{{user.fullName}}</span>
      </div>
      <div class="card-content">
        <label>Email </label>{{user.email}}
        <br><label>Priveleges </label> {{user.role}}
      </div>
      <div class="card-action">
        {{#link-to 'users.show' user class="collection-item"}}View{{/link-to}}
        <button {{action 'edit' user}}>Edit</button>
        <button {{action 'delete' user}}>Delete</button>
      </div>
    </div>
    {{/each}}
  </div>
</div>
