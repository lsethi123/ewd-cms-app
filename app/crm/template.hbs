<div class="row">
  <div class="flex-container-column col l1">
    <!-- {{#link-to 'crm.craigslist' class="flex-item"}}<i class="flex-item fa fa-contao"></i>{{/link-to}} -->
    {{#link-to 'crm.companies.index' class="flex-item"}}<i class="mdi-communication-business medium"></i>{{/link-to}}
    <!-- {{#link-to 'crm.craigslist' class="flex-item"}}<i class="flex-item mdi-communication-phone medium"></i>{{/link-to}} -->
    {{#link-to 'crm.companies.index' class="flex-item"}}<i class="flex-item mdi-social-group medium"></i>{{/link-to}}
    {{#link-to 'crm.forecast' class="flex-item"}}<i class="flex-item mdi-action-event medium"></i>{{/link-to}}
  </div>
  <div class="col l8">
    {{outlet}}
  </div>
  <div class="col l2">
    <aside class="top">
      <ul>
        <li class="list-group-item">
          <h5>{{#link-to 'crm.companies.new'}}
            <span class="modal-action modal-close">
              {{md-btn icon='mdi-image-control-point' buttonType='floating' class='btn-large teal lighten-1'}}
            </span>
          {{/link-to}}
          Add Company</h5>
        </li>
        <li class="list-group-item">Total Companies
          <div class="secondary-content"><i class="mdi-action-bug-report">1012</i></div>
        </li>
        <li class="list-group-item">Engaged
          <div class="secondary-content"><i class="mdi-action-account-box">343</i></div>
        </li>
        <li class="list-group-item">Account Efficiency
          <div class="secondary-content"><i class="mdi-action-announcement">48%</i></div>
        </li>
      </ul>

      <div class="collection">
        {{#link-to crm.companies class='collection-item avatar'}}<i class="circle green mdi-maps-beenhere"></i><h5>Engaged</h5>{{/link-to}}
        {{#link-to crm.companies class='collection-item avatar'}}<i class="circle yellow mdi-maps-beenhere"></i><h5>Courting</h5>{{/link-to}}
        {{#link-to crm.companies class='collection-item avatar'}}<i class="circle red mdi-maps-beenhere"></i><h5>Unaware</h5>{{/link-to}}
      </div>
    </aside>
  </div>
</div>
