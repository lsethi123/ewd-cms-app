<ul class="collection with-header">
   <li class="collection-header"><h4>Companies</h4></li>
   {{#each model as |company|}}
     {{#link-to 'crm.companies.show' company class="collection-item"}}
       {{company.name}}
       {{company.address}}
       {{company.city}}
       {{company.state}}
       {{company.phone}}
       {{company.email}}
     {{/link-to}}
   {{/each}}
</ul>

<ul class="collection with-header">
   <li class="collection-header"><h4>Opportunities</h4></li>
   {{#each opportunities as |opportunity|}}
     <!-- {{#link-to 'crm.companies.show.opportunities.show' task class="collection-item"}} -->
     {{opportunity.title}}
     {{opportunity.stage}}
     {{opportunity.estimatedClose}}
     {{opportunity.estimatedAmount}}
     {{opportunity.company.name}}
     <!-- {{/link-to}} -->
   {{/each}}
</ul>

<ul class="collection with-header">
   <li class="collection-header"><h4>Tasks</h4></li>
   {{#each tasks as |task|}}
     <!-- {{#link-to 'crm.companies.show.tasks.show' task class="collection-item"}} -->
    <div class="collection-item">
     {{task.name}}
     {{task.description}}
     {{task.dueDate}}
     {{task.employee.fullName}}
     {{task.user.fullName}}
     {{task.company.name}}
    </div>
     <!-- {{/link-to}} -->
   {{/each}}
</ul>
