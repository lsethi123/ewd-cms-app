<div class="row">
  <div class="col s3">
    {{#link-to 'crm.companies.new'}}Add{{/link-to}}
  </div>
  <div class="col s9">
    <span>Todo => Sortable Header Values \/\/</span>
  </div>
</div>
<div class="row">
  <div class="col s12">
    {{#crm-companies-index}}
    <table>
      <thead>
        <tr>
          <th>Company</th>
          <th>Email</th>
          <th>City</th>
          <th>State</th>
        </tr>
      </thead>
      <tbody>
        {{#each model as |company|}}
        <tr id="card-panel" class="cyan darken white-text ember-view card-panel">
              <td>{{#link-to 'crm.companies.show' company}}{{company.name}}{{/link-to}}</td>
              <td>{{company.address}}</td>
              <td>{{company.city}}</td>
              <td>{{company.state}}</td>
              <td>{{company.phone}}</td>
              <td>{{company.email}}</td>
        </tr>
        {{/each}}

      </tbody>
    </table>
    {{/crm-companies-index}}
  </div>
</div>
