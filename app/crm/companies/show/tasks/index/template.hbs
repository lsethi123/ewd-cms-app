{{#if model}}
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Due Date</th>
      <th>Employee</th>
      <th>Assigned to</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#each model as |task|}}
        <tr>
          <td>{{#link-to 'crm.companies.show.tasks.show' task}}{{task.name}}{{/link-to}}</td>
          <td>{{task.description}}</td>
          <td>{{task.dueDate}}</td>
          <td>{{#link-to 'crm.companies.show.employees.show' task.employee}}{{task.employee.fullName}}{{/link-to}}</td>
          <td>{{task.user.fullName}}</td>
          <td>{{md-btn text='Edit' class='blue-grey darken-1' action='edit' actionArg=task}}{{md-btn text='Delete' class='blue-grey darken-1' action='delete' actionArg=task}}</td>
        </tr>
    {{/each}}
  </tbody>
</table>
{{else}}
<div class="else-text">
  No tasks. Start by adding the one.
</div>
{{/if}}
