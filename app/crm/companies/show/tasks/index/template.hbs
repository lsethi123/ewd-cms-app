{{#if model}}
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Due Date</th>
      <th>Employee</th>
      <th>Assigned to</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#each model as |task|}}
        <tr>
          <td>{{#link-to 'crm.companies.show.tasks.show' task}}{{task.name}}{{/link-to}}</td>
          {{content-editable value=task.description tagName="td" focus-out="saveEditable" type="text"}}
          {{content-editable value=task.dueDate tagName="td" focus-out="saveEditable" type="text"}}
          {{content-editable value=task.employee.fullName tagName="td" focus-out="saveEditable" type="text"}}
          {{#content-editable value=task.user.fullName tagName="td" focus-out="saveEditable" type="html"}}
          <!--Select dropdown of user to assign to goes here -->
          {{/content-editable}}
          <td>{{md-btn text='Delete' class='blue-grey darken-1' action='delete' actionArg=task}}</td>
        </tr>
    {{/each}}
  </tbody>
</table>
{{else}}
<div class="else-text">
  No tasks. Start by adding the one.
</div>
{{/if}}
