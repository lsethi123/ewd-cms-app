{{#if isEditing}}
{{#md-modal close='closeModal' class="test-modal"}}
{{#if sendingData}}
<div class="modal-content">
<div class="col s10">
  {{md-loader}}
</div>
</div>
{{else}}
<div class="modal-content">
  {{md-input type="text" value=model.name label="Name"}}
  {{md-textarea value=model.description label="Description"}}
  {{md-input type="text" value=model.dueDate label="Due date"}}
  {{md-select content=employees
  value=selectedEmployee
  label="Employee"
  prompt="Please choose..."
  optionLabelPath="content.fullName"
  optionValuePath="content"}}

  {{md-select content=users
  value=selectedUser
  label="Assigned to"
  prompt="Please choose..."
  optionLabelPath="content.fullName"
  optionValuePath="content"}}
</div>
<div class="modal-footer">
    <button class="modal-action modal-close waves-effect waves-orange btn-flat agree-button" type="submit" {{action 'save'}}>
        Save!
    </button>
    <a class="modal-action modal-close waves-effect waves-red btn-flat cancel-button" {{action 'cancel'}}>
        Cancel
    </a>
</div>
{{/if}}
{{/md-modal}}
{{else}}
  {{model.name}}
  {{model.description}}
  {{model.dueDate}}
  {{#link-to 'crm.companies.show.employees.show' model.employee}}{{model.employee.fullName}}{{/link-to}}
  {{model.user.fullName}}
  {{md-btn text='Edit' class='cyan darken-3' action='edit'}}
{{/if}}
