{{#md-modal close='closeModal' class="test-modal"}}
{{#if sendingData}}
<div class="modal-content">
<div class="col s10">
  {{md-loader}}
</div>
</div>
{{else}}
<form class="create-form" {{action 'add' on="submit"}}>
  <div class="modal-content">
  {{md-input type="text" value=model.name label="Enter name"}}
  {{md-textarea value=model.description label="Enter description"}}
  {{md-input-date type="text" value=model.dueDate label="Enter date"}}

  {{md-select content=employees
  value=selectedEmployee
  label="Employee"
  prompt="Please choose..."
  optionLabelPath="content.fullName"
  optionValuePath="content"}}

  {{md-select content=users
  value=selectedUser
  label="Assigned to"
  prompt="Please choose..."
  optionLabelPath="content.fullName"
  optionValuePath="content"}}
</div>
<div class="modal-footer">
    <a class="modal-action modal-close waves-effect waves-orange btn-flat agree-button" {{action 'add'}}>
        Add
    </a>
    <a class="modal-action modal-close waves-effect waves-red btn-flat cancel-button" {{action 'cancel'}}>
        Cancel
    </a>
</div>
</form>
{{/if}}
{{/md-modal}}
