{{#if model}}
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Stage</th>
      <th>Estimated Close</th>
      <th>Estimated Amount</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
  {{#each model as |opportunity|}}
  <tr>
    <td>{{#link-to 'crm.companies.show.opportunities.show' opportunity}}{{opportunity.title}}{{/link-to}}</td>
    {{content-editable value=opportunity.stage tagName="td" focus-out="saveEditable" type="text"}}
    {{content-editable value=opportunity.estimatedClose tagName="td" focus-out="saveEditable" type="text"}}
    {{content-editable value=opportunity.estimatedAmount tagName="td" focus-out="saveEditable" type="text"}}
    <td>{{md-btn text='Delete' class='blue-grey darken-1' action='delete' actionArg=opportunity}}</td>
  </tr>
  {{/each}}
</tbody>
</table>
{{else}}
<div class="else-text">
  No opportunities. Start by adding one.
</div>
{{/if}}
