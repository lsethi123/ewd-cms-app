{{#md-modal close='closeModal' class="test-modal"}}
{{#if sendingData}}
<div class="modal-content">
<div class="col s10">
  {{md-loader}}
</div>
</div>
{{else}}
<form id="opportunity-form" class="create-form" {{action 'add' on="submit"}}>
  <div class="modal-content">
  {{md-input type="text" value=model.title label="Enter Title"}}
  <!-- <select required>
    <option>None</option>
    {{#each stages as |stage|}}
      <option {{action 'selectStage' stage}}>{{stage}}</option>
    {{/each}}
  </select> -->
  {{md-select content=stages
  value=selectedStage
  label="Stages"
  prompt="Please choose..."
  optionLabelPath="content"
  optionValuePath="content"}}
  {{md-input-date type="text" value=model.estimatedClose label="Enter Close"}}
  {{md-input type="text" value=model.estimatedAmount label="Enter Amount"}}
</div>
<div class="modal-footer">
    <a class="modal-action modal-close waves-effect waves-orange btn-flat agree-button" {{action 'add'}}>
        Add
    </a>
    <a class="modal-action modal-close waves-effect waves-red btn-flat cancel-button" {{action 'cancel'}}>
        Cancel
    </a>
</div>
</form>
{{/if}}
{{/md-modal}}
