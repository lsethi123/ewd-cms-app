{{#if sentSuccessfully}}
{{#md-modal close='closeModal' class="test-modal"}}
        <div class="modal-content">
            <h4>Email sent.</h4>
            <p>Successfully sent the email to {{model.fullName}}!</p>
        </div>
        <div class="modal-footer">
            <a class="modal-action modal-close waves-effect waves-orange btn-flat agree-button" {{action 'done'}}>
                Done!
            </a>
            <a class="modal-action modal-close waves-effect waves-red btn-flat cancel-button" {{action 'closeModal'}}>
                Cancel
            </a>
        </div>
    {{/md-modal}}
{{else}}
<h4>Please enter a message to send:</h4>
{{md-input type="text" value=emailSubject label="Subject"}}
{{md-textarea label='Message' value=emailMessage}}<br/><br/>
{{md-btn text='Send Email' class='blue-grey darken-1' action='sendEmail'}}
{{/if}}
