<form id="company-form" class="create-form" {{action 'addCompany' on="submit"}}>
  {{md-input type="text" value=model.name label="Company name"}}
  {{md-input type="text" value=model.description label="Describe the business"}}
  {{md-input type="text" value=model.address label="Company address"}}
  {{md-input type="text" value=model.city label="Company City"}}
  {{md-input type="text" value=model.state label="Company State"}}
  {{md-input type="tel" value=model.phone label="Business Phone"}}
  {{md-input type="email" value=model.email label="Company Email"}}
  <button class="button primary" type="submit">Add</button>
  <button {{action 'cancel'}} class="button">Cancel</button>
</form>
