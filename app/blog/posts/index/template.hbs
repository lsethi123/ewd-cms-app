<div class="row">

    {{#each model as |post|}}
      <div class="col l4 m6 s12">
        {{#md-card title=post.title
        image="http://placehold.it/200x200"
        activator=true
        id="card-reveal"}}
          {{#md-card-content}}
              {{post.subtitle}}
              <!-- {{#link-to 'blog.posts.show' post}}{{post.title}}{{/link-to}} -->
          {{/md-card-content}}

          {{#md-card-action}}
            {{#if post.published}}
              <a{{action 'unpublish' post}}>Unpublish</a>
            {{else}}
              <a {{action 'publish' post}}>Publish</a>
            {{/if}}
            <a {{action 'edit' post}}>Edit</a>
            <a {{action 'delete' post}}>Delete</a>
          {{/md-card-action}}

          {{#md-card-reveal}}
              {{post.body}}
              <button {{action 'edit' post}}>Edit</button>
              <button {{action 'delete' post}}>Delete</button>
          {{/md-card-reveal}}
        {{/md-card}}
      </div>
    {{/each}}
</div>
