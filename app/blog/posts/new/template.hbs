{{#md-modal close='closeModal' class="test-modal"}}
{{#if sendingData}}
<div class="modal-content">
<div class="col s10">
  {{md-loader}}
</div>
</div>
{{else}}
<form id="post-form" class="create-form" {{action 'add' on="submit"}}>
  <div class="modal-content">
  {{md-input type="text" value=model.title label="Post title"}}
  {{md-input type="text" value=model.subtitle label="Subtitle"}}
  {{md-textarea type="text" value=model.body label="Body Text"}}
  {{md-switch checked=model.published onLabel="Publish" offLabel="Unpublish"}}<br>
  Tags:
  {{ember-chosen
    content=tags
    optionLabelPath="name"
    optionValuePath="id"
    placeholder="Select tags for post"
    multiple=true
    value=selectedTags}}
</div>
<div class="modal-footer">
    <a class="modal-action modal-close waves-effect waves-orange btn-flat agree-button" {{action 'add'}}>
        Add
    </a>
    <a class="modal-action modal-close waves-effect waves-red btn-flat cancel-button" {{action 'cancel'}}>
        Cancel
    </a>
</div>
</form>
{{/if}}
{{/md-modal}}
