{{#if posts}}
<div class="layout-hf-holy-grail">
  <div class="body">
    <main>
      {{#each posts as |post|}}
      <div class="blog-post-banner-header one-edge-shadow">
        <div class="container">
          {{#link-to 'blog.posts.show' post}}<h3 class="center white-text">{{post.title}}</h3>{{/link-to}}
          <h5 class="center white-text">{{post.subtitle}}</h5>
        </div>
      </div>
      <div class="blog-post-body">
        <p class="cyan-text text-darken-4 blog-post-body-text">
          {{post.body}}
        </p><br/>
        <div class="blog-post-banner-footer">
          {{#if post.published}}
            {{md-btn text='Unpublish' class='cyan darken-3' action='unpublish' actionArg=post}}
          {{else}}
            {{md-btn text='Publish' class='cyan darken-3' action='publish' actionArg=post}}
          {{/if}}
          {{md-btn text='Edit' class='cyan darken-3' action='edit' actionArg=post}}
          {{md-btn text='Delete' class='cyan darken-3' action='delete' actionArg=post}}
          <!-- <div class="user-icon"><i class="mdi-maps-local-laundry-service indigo-color"></i></div>
          <div class="user-icon"><i class="mdi-hardware-phone-iphone indigo-color"></i></div> -->
          </div>
      </div>
      <hr>
      <br>
      {{/each}}
    </main>
    <aside>
      <ul>
        {{#each posts as |post|}}
          {{#link-to 'blog.posts.show' post}}
          <div class="list-group-item">
            <h5 class="cyan-text text-darken-4 o-hidden"><strong>{{post.title}}</strong></h5>
            <p class="cyan-text text-darken-4 o-hidden">{{post.subtitle}}</p>
          </div>
          {{/link-to}}
        {{/each}}
      </ul>
    </aside>
  </div>
</div>
{{else}}
<div class="else-text">
  No posts. Start by adding the one.
</div>
<div class="text-center">
  {{#link-to 'blog.tags.new' class="white-text"}}
  {{md-btn text='Add Tag'
    class='cyan darken-3'}}
  {{/link-to}}
  {{#link-to 'blog.posts.new' class="white-text"}}
  {{md-btn text='Add Post'
    class='cyan darken-3'}}
  {{/link-to}}
</div>
{{/if}}
