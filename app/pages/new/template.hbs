{{#md-modal close='closeModal' class="test-modal"}}
{{#if sendingData}}
<div class="modal-content">
<div class="col s10">
  {{md-loader}}
</div>
</div>
{{else}}
<form id="page-form" multipart="true" class="create-form" {{action 'add' on="submit"}}>
<div class="modal-content">
  {{md-input type="text" value=model.title label="Page title"}}
</div>
  <div class="modal-footer">
      <a class="modal-action modal-close waves-effect waves-orange btn-flat agree-button" {{action 'add'}}>
          Add
      </a>
      <a class="modal-action modal-close waves-effect waves-red btn-flat cancel-button" {{action 'closeModal'}}>
          Cancel
      </a>
  </div>
</form>
{{/if}}
{{/md-modal}}
