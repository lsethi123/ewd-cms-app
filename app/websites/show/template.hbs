
<div class="tag-cloud">
{{#each websites as |website|}}
  {{#link-to 'websites.show' website}}
  <div class="tag-badge card-panel blue-grey darken-4 white-text">
    {{website.address}}
  </div>
  {{/link-to}}
{{/each}}
</div>
<div style="float:left; margin-right: 50px; display: inline-block;">
  {{#link-to 'websites.new' class="btn blue-grey darken-1"}}Create Website{{/link-to}}<br/><br/>
  {{#link-to 'websites.show.pages.new' class="btn blue-grey darken-1"}}New Page{{/link-to}}<br/><br/>
  <button class="btn blue-grey darken-1" {{action 'delete' model}}>Delete Website</button>
  <h5>Pages</h5>
  {{#if model.pages}}
  {{#each model.pages as |page|}}
    <div class="orgChart">
      {{#link-to 'websites.show.pages.show' page}}{{page.title}}{{/link-to}}<br/>
    </div>
  {{/each}}
  {{else}}
  No pages. Start by creating one.<br/>
  {{/if}}
</div>
<div style="float: left; width: 70%; display: inline-block;">
<h1>{{model.title}}</h1>
<h2>{{model.address}}</h2>
<br/><br/>
{{outlet}}
</div>
