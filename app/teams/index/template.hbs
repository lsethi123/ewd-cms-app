<div class="row">
  <div class="col s12">
    <br>
    {{#link-to 'users.new' class="white-text"}}
    {{md-btn text='Add New User'
      class='indigo darken-2'}}
    {{/link-to}}

    {{#link-to 'teams.new' class="white-text"}}
    {{md-btn text='Add New Team'
      class='indigo darken-2'}}
    {{/link-to}}
  </div>
</div>


<div class="row">
  <div class="col s12">
    {{#each model as |team|}}
    <div class="col m6 l4 card small hoverable">
      <div class="card-image">
        <img src="http://placehold.it/100x200"/>
        <span class="card-title">{{team.name}}</span>
      </div>
      <div class="card-content">
        <label>Members </label>{{user.fullName}}
        <br><label>Description </label> {{team.whatever}}
      </div>
      <div class="card-action">
        {{#link-to 'teams.show' team class="collection-item"}}View Profile{{/link-to}}
        <button {{action 'edit' team}}>Edit</button>
        <button {{action 'delete' team}}>Delete</button>
      </div>
    </div>
    {{/each}}
  </div>
</div>
